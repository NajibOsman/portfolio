
<div class="container">
<p id="notice"><%= notice %></p>

<p>
<strong>Title:</strong>
<%= @post.title %>
</p>

<p>
<strong>Description:</strong>
<%= @post.description %>
</p>

<p>
<strong>Tags:</strong>
<%= @post.tags %>
</p>

<%if current_user && current_user.user_role?%>
<div class="add-comment row">
<div class="col-sm-12">
<h4>Add a comment</h4>
<%= form_for :comment, url: post_comments_path(@post) do |f| %>
  <div class="form-group">
  <%= f.text_area :body, class: "form-control", placeholder: "Comment here", rows: 5, required: true %>
  </div>
  <div class="form-group">
  <%= f.button "comment", class: "btn btn-success" %>
  </div>
  </div>
  <%end%>
  <%else%>
  <h5>you need to sign in to comment</h5>
  <%= link_to "Log in", new_user_session_path%>
  <%= link_to "Sign Up", new_user_registration_path%>
  <%end%>

  <%= link_to 'Back', posts_path %>
  </div>
