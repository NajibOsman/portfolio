<p id="notice"><%= notice %></p>

<p>
<strong>Title:</strong>
<%= @post.title %>
</p>

<p>
<strong>Description:</strong>
<%= @post.description %>
</p>

<p>
<strong>Tags:</strong>
<%= @post.tags %>
</p>


<%= form_for :comment, url: post_comments_path(@post) do |f| %>

  <div class="field">
  <%= f.label :comment %>
  <%= f.text_area :comment, id: :comment_comment %>
  </div>

  <div class="actions">
  <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', posts_path %>
